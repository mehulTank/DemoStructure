<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/row_productlist_cvContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_7sdp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="@dimen/_3sdp"
    app:cardElevation="@dimen/_3sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ripple_custom"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">

            <ImageView
                android:id="@+id/row_productlist_ivProductImg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_120sdp"
                android:layout_margin="@dimen/_5sdp"
                android:scaleType="fitXY"/>

        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_3sdp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <com.automobile.service.customecomponent.CustomTextView
                android:id="@+id/row_productlist_tvTitle"
                style="@style/TextStyle.row_mattresesscare.title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Car Seat Neck Cushion Pillow"
                android:layout_alignParentTop="true"
                android:textSize="@dimen/_10sdp"
                android:maxLines="2"
                app:font_name="GothamHTF-Medium.otf"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginBottom="@dimen/_6sdp"
                android:layout_marginStart="@dimen/_6sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:background="@color/collection_color"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <com.automobile.service.customecomponent.CustomTextView
                    android:id="@+id/row_productlist_tvPrise"
                    style="@style/TextStyle.row_mattresesscare.date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/red"
                    android:text="$150"
                    app:font_name="GothamHTF-Medium.otf"/>


            </RelativeLayout>




        </LinearLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>

